<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.fossasia.phimpme.gallery.activities.MainMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="#FF33B5E5"
            android:id="@+id/background"
            android:padding="26dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/logo"/>

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/accent_amber"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/buttonCamera">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/title_camera"
                    android:layout_margin="8dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_photo_camera_white_48dp"
                    android:id="@+id/imageCamera"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/accent_green"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/buttonGallery">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/title_gallery"
                    android:layout_margin="8dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/ic_image_black_24dp"
                    android:tint="@android:color/white"
                    android:id="@+id/imageGallery"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/accent_indago"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/buttonSettings">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/settings"
                    android:layout_margin="8dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/ic_settings_black_24dp"
                    android:id="@+id/imageSettings"
                    android:tint="@android:color/white"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/accent_cyan"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/buttonAccounts">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/title_account"
                    android:layout_margin="8dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/ic_account_box_black_24dp"
                    android:id="@+id/imageAccount"
                    android:tint="@android:color/white"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/buttonShare"
                android:background="@color/accent_amber"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/share_phimpme"
                    android:layout_margin="8dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/ic_share_black_24dp"
                    android:id="@+id/imageShare"
                    android:tint="@android:color/white"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/accent_green"
                android:id="@+id/buttonAbout"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/about"
                    android:layout_margin="8dp"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/ic_info_outline_black_24dp"
                    android:id="@+id/imageAbout"
                    android:tint="@android:color/white"/>
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
